<div class="container cotainer-margin">
  <div class="row">
    <div class="col-sm-8">
      <div role="tabpanel" class="forum-section">
        <ul class="nav nav-tabs">
          <li role="presentation" class="active"><a href="#Forum" aria-controls="home" role="tab" data-toggle="tab">Forum</a></li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="Forum">
            <ul>

              <li><%= link_to "Announcements",announcements_path%>
                <li><%= link_to "General Discussions",generals_path%></li>
                <li><a href="#">Domain Specific </a> </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="latest-threads">
          <div class="head">LATEST THREADS</div>
          <div class="content-area">
            <% if @latest.present? %>
            <% @latest.each do |latest| %>
            <%if latest.announcement_id? %>
            <%= link_to edit_announcement_path(latest), :method => :get do%>
            <div class="threads">
              <div class="user"><%= latest.announcement.user.name.titleize %></div>
              <div class="post-body"><%= truncate(latest.announcement.description, :ommision => "... Read More", :length => 70) %></div>
              <div class="date-time"><%= latest.announcement.created_at.strftime("%I:%M %P %b %d") %> </div>
              <% end %>
            </div>
            <% else %>
            <%= link_to edit_general_path(latest), :method => :get do%>
            <div class="threads">
              <div class="user"><%= latest.general.user.name.titleize %></div>
              <div class="post-body"><%= truncate(latest.general.description, :ommision => "... Read More", :length => 70) %></div>
              <div class="date-time"><%= latest.general.created_at.strftime("%I:%M %P %b %d") %> </div>
            </div>
            <% end %>
            <% end %>
            <% end %>
            <% else %>
            <div class="threads">
              <div class="post-body">No Threads Found</div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

